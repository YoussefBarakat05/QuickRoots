<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EFEB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Bisection Solver"
            android:textColor="#C8D9E6"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Enter Coefficients section -->
        <TextView
            android:id="@+id/tvCoefficientsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:text="Enter Coefficients"
            android:textColor="@color/babyblue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEquation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="f(x) = ax⁵ + bx⁴ + cx³ + dx² + ex + f"
            android:textColor="@color/babyblue"
            android:textSize="18sp" />

        <!-- Row: a, b -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a"
                    android:textColor="@color/babyblue"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1"
                    android:inputType="numberDecimal|numberSigned" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b"
                    android:textColor="@color/babyblue"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="numberDecimal|numberSigned" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row: c, d -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c"
                    android:textColor="@color/babyblue"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="numberDecimal|numberSigned" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d"
                    android:textColor="@color/babyblue"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="numberDecimal|numberSigned" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row: e, f -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="e"
                    android:textColor="@color/babyblue"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="numberDecimal|numberSigned" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="f"
                    android:textColor="@color/babyblue"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="-1"
                    android:inputType="numberDecimal|numberSigned" />
            </LinearLayout>
        </LinearLayout>

        <!-- Set Calculation Parameters section -->
        <TextView
            android:id="@+id/tvParamsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            android:text="Set Calculation Parameters"
            android:textColor="@color/babyblue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Xlower -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X lower"
            android:textColor="@color/babyblue"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etXLower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter lower bound"
            android:inputType="numberDecimal|numberSigned"
            android:paddingBottom="8dp" />

        <!-- Xupper -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="X upper"
            android:textColor="@color/babyblue"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etXUpper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter upper bound"
            android:inputType="numberDecimal|numberSigned"
            android:paddingBottom="8dp" />

        <!-- Stopping Error -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Stopping Criterion Error"
            android:textColor="@color/babyblue"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etStoppingError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 0.001"
            android:inputType="numberDecimal|numberSigned"
            android:paddingBottom="16dp" />

        <!-- Result card -->
        <LinearLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvResultLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Result"
                android:textColor="@color/babyblue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Results will be displayed here."
                android:textColor="@color/babyblue"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Calculate button -->
        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F7C9D4"
            android:text="Calculate"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>
